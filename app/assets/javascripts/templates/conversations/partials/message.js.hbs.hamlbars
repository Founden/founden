%div{:bind => {:class => ':message isUnread:unread isFocused:focused'}}
  %img.message-user-image{:bind => {:src => 'user.avatarUrl'}}
  .message-wrap
    .message-content
      {{content}}
      .message-meta
        {{user.name}}
        &middot;
        {{timeago timeAgo}}
        {{#unless parentMessage}}
        &middot;
        %a{:href => '#', :_action => 'activateReplyOn this'}
          {{#if isFocused}}
          You are replying to this message. Click again to cancel.
          {{else}}
          Reply
          {{/if}}
        {{/unless}}

    {{partial 'conversations/partials/attachments'}}
    .message-actions
      %span{:_action => 'addToSummary this', :bind => {:class => ':icon :icon-star isSummary:pinned'}}
  {{#if replies.firstObject}}
  .message-replies
    {{#each reply in message.replies}}
    {{#with reply}}
    {{partial 'conversations/partials/message'}}
    {{/with}}
    {{/each}}
  {{/if}}

