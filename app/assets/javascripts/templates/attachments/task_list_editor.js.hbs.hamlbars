.attachment-field
  {{view view.inputView value=newTask placeholder='Type and press enter to add a new task...' enter="addTask"}}

.attachment-field
  {{#if view.needsTitle}}
  {{view view.titleView value=taskList.title placeholder='Give your list a name...'}}
  {{else}}
  %a{:href => '#', :_action => 'enableTitle target=view'}
    Add a title
  {{/if}}

{{#with taskList}}
{{partial 'attachments/task_list'}}
{{/with}}
